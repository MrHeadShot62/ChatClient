<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.arcticsoft.bluebearlive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.logic.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fragments.FeedLine.DetailActivity" />
        <activity android:name=".activity.SignInActivity" />
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.ApiCallActivity" />
        <activity android:name=".activity.SecondStepAuth"></activity>
    </application>

</manifest>